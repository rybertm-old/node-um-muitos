<!doctype html>
<html lang="pt-br">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Editar Protuto</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script>
        //função para carregar valores do bd tabela EDITORA
        function carregaCateg() {
            var select_p = document.getElementById("Lista_d").value;
            document.getElementById("Categ").value = select_p;
        }

    </script>
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card"> 
    	<div class="card-header"> Editar Dados </div>
        <div class="card-body">
            <form action="/consulta/atualizar/<%= IdProduto %>" method="post">
                <div class="form-group">
                    <label>Descricao:</label>
                    <input type="text" class="form-control" name="Descricao" value="<%= Descricao %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Preco:</label>
                    <input type="text" class="form-control" name="Preco" value="<%= Preco %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Unidade:</label>
                    <input type="text" class="form-control" name="Unidade" value="<%= Unidade %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>CodCateg:</label>
                    <input type="text" class="form-control" id="Categ" name="CodCateg" value="<%= CodCateg %>" autocomplete="off" required>
                </div>
                   <Select com dados do bd tabela CATEGORIA - UM-PARA-MUITOS
                   <select class="form-control form-control-sm" id="Lista_d" name="select"
                   onchange="carregaCateg()">
                   <% for (var i=0; i < dataProduto.length; i++) { %>
                       <option value="<%= dataProduto[i].IdCategoria %>">
                           <%= dataProduto[i].Tipo %>
                       </option>
                       <% } %>
               </select>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Atualizar"/>
                </div>
            </form>
        </div>
    </div>
</body>
</html>